@model IList<AzureNoteEntities.Note>

<div id="sidebar">
    <div class="sidebar-fixed">
        <a href="#menu-toggle" id="menu-toggle">
            <i class="fa fa-bars" aria-hidden="true"></i>
        </a>
        <hr />
        <a href="@Url.Action("CreateNew", "Home")">
            <i class="fa fa-plus" aria-hidden="true"></i><span>New</span>
        </a>
        <hr />
    </div>
    <ul class="sidebar-nav">
        @if (Model != null)
            {
                foreach (var a in Model)
                {
                    var isActive = Request.Url?.PathAndQuery.Contains(a.Id) == true;

                <li>
                    <a href="@Url.Action("ViewDetails", "Home", new {id = a.Id})" class="@(isActive ? "active" : "")" title="@a.Title">
                        <i class="fa fa-sticky-note" aria-hidden="true"></i>
                        <span>@a.Title</span>
                    </a>
                </li>
            }
        }
    </ul>
</div>
