@using AzureNoteEntities
@model AzureNoteEntities.Note

@{
    ViewBag.Title = "View - " + Model.Title;
}

@Html.Partial("SideBar", ViewBag.Notes as IList<Note>)

<div id="sidebar-content">
    <div class="row">
        <div class="col-md-10">
            <h3 class="text-primary">
                <strong>@Model.Title</strong>
            </h3>
        </div>
        <div class="col-md-2">
            <div class="btn-group pull-right">
                <button type="button" class="btn btn-primary" onclick="location.href = '@Url.Action("Edit", "Home", new {id = Model.Id})'">
                    Edit
                </button>
                <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="caret"></span>
                    <span class="sr-only">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu">
                    <li>
                        <a href="@Url.Action("Delete", "Home", new {id = Model.Id})" class="btn btn-link btn-danger"
                           onclick="return dialog.confirm('Do you want to delete this note?', this);"
                           title="Delete this note permernently">
                            <i class="fa fa-trash text-danger"></i> Delete
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <hr />
    <div>@Html.Raw(Model.Contents ?? "<p>The content is empty.</p>")</div>
    <hr />
    <div class="form-group">
        <dl class="dl-horizontal col-xs-5 text-muted">
            <dt>
                <em class="small">@Html.LabelFor(a => a.CreatedDate)</em>
            </dt>
            <dd>
                <em class="small">@Html.DisplayFor(a => a.CreatedDate)</em>
            </dd>
            <dt>
                <em class="small">@Html.LabelFor(a => a.UpdatedDate)</em>
            </dt>
            <dd>
                <em class="small">@Html.DisplayFor(a => a.UpdatedDate)</em>
            </dd>
        </dl>
    </div>
</div>
